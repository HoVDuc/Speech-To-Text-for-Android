<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <include layout="@layout/fragment_first" />


    <ImageView
        android:id="@+id/idIVMic"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="63dp"
        android:layout_marginBottom="42dp"
        android:elevation="5dp"
        android:src="@drawable/mic" />

    <TextView
        android:id="@+id/idTVOutput"
        android:layout_width="336dp"
        android:layout_height="336dp"
        android:layout_above="@+id/idIVSave"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="69dp"
        android:background="@drawable/bg_tomato_radius"
        android:elevation="5dp"
        android:fontFamily="@font/maian"
        android:gravity="center"
        android:text="@string/test"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textFileName"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_above="@+id/idTVOutput"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="117dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="118dp"
        android:layout_marginBottom="58dp"
        android:fontFamily="@font/maian"
        android:text="@string/filename"
        android:textAlignment="center"
        android:textSize="28sp" />

    <ImageView
        android:id="@+id/idIVSave"
        android:layout_width="92sp"
        android:layout_height="92sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="101dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="42dp"
        android:layout_toEndOf="@+id/idIVMic"
        android:elevation="5dp"
        android:src="@drawable/save" />


</RelativeLayout>
